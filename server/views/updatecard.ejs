<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
              crossorigin="anonymous">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

        <link rel="stylesheet" href="../css/adminStyles.css"/>
        <title>Update Card</title>
    </head>
    <body class="justify-content-center row">
        <div class="col-6">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th class="col-3" scope="col">Property</th>
                        <th scope="col">Value</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (const [key, value] of Object.entries(cardResult)) { %>
                        <% if(key === 'fileExt' || key==='titleLower') continue; %>
                        <tr>
                            <th><%= key %></th>
                            <td><%= value %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>

            <div class="row">

                <form class="col-4 text-center" action="/allcards">
                    <button type="submit" class="btn btn-danger">Go Back</button>
                </form>

                <div class="col-4 text-center">
                    <button type="button" onclick="deletecard('<%= cardResult.id %>')" class="btn btn-danger">Delete
                        Card
                    </button>
                </div>

                <form class="col-4 text-center" action="/editcardpage/<%= cardResult.id %>">
                    <button type="submit" class="btn btn-primary">Edit Card</button>
                </form>
            </div>
        </div>

        <script>
            function deletecard(id) {
                if (confirm("Do you want to delete?")) {
                    window.location = '/deletecard/' + id;
                }
            }
        </script>

        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
                integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
                crossorigin="anonymous"></script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
                integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
                crossorigin="anonymous"></script>
    </body>
</html>